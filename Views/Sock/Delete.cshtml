@model GammaWear.ViewModels.SockDetailsViewModel
@using GammaWear.Helpers

@{
    ViewData["Title"] = "Delete Sock";
}

<h1>Delete Sock</h1>

<div>
    
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <img class="img-fluid" src="~/images/@Model.ImageFile" alt="@Model.Description">
            </div>

            <div class="col-md-6">

                <p><strong>Material:</strong>  @Model.MaterialName</p>
                <p><strong>Size:</strong> @EnumHelper.GetDisplayName(Model.SockSize)</p>
                <p><strong>Style:</strong> @Model.SockStyleName</p>
                <p><strong>Brand:</strong> @Model.BrandName</p>
                <p><strong>Outdoor Sport:</strong> @Model.OutdoorSportName</p>
                <p><strong>Consumer Group:</strong> @Model.ConsumerGroup</p>
                <p><strong>Season:</strong> @Model.SeasonName</p>
                <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
                <p><strong>In Stock:</strong> @Model.Quantity</p>
                <br />
                <p><strong>Description:</strong>@Model.Description</p>
            </div>
        </div>
        <form id="deleteForm" asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="button" value="Delete" class="btn btn-custom" data-toggle="modal" data-target="#deleteModal" />

            <a asp-controller="Home" asp-action="Index" class="btn btn-custom">Home</a>
        </form>
    </div>
</div>

<!-- Modal for delete confirmation -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #6FA5A9;">
                <h5 class="modal-title" id="deleteModalLabel" style="color:white;">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color:white;">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this sock?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-custom" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-custom" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function() {
            $('#confirmDelete').click(function() {
                $('#deleteForm').submit();
            });
        });
    </script>
}