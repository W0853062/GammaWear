@model GammaWear.Models.Sock

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Sock</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <img class="img-fluid" src="~/images/@Model.ImageFile" alt="@Model.Description">
    </div>
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MaterialId" class="control-label">Material</label>
                <select asp-for="MaterialId" class="form-control" asp-items="ViewBag.Materials">
                    <option value="">Please select a material</option>
                </select>
              
                <span asp-validation-for="MaterialId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SockStyleId" class="control-label">SockStyle</label>
                <select asp-for="SockStyleId" class="form-control" asp-items="@(ViewBag.SockStyles)">
                    <option value="">Please select a sock style</option>
                </select>
                <span asp-validation-for="SockStyleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutdoorSportId" class="control-label">Outdoor Sport</label>
                <select asp-for="OutdoorSportId" class="form-control" asp-items="@(ViewBag.OutdoorSports)">
                    <option value="">Please select an outdoor sport</option>
                </select>
                <span asp-validation-for="OutdoorSportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SockSize" class="control-label">Sock Size</label>
                <select asp-for="SockSize" class="form-control" asp-items="Html.GetEnumSelectList<GammaWear.Models.SockSize>()"></select>
                <span asp-validation-for="SockSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConsumerGroup" class="control-label">Consumer Group</label>
                <select asp-for="ConsumerGroup" class="form-control" asp-items="Html.GetEnumSelectList<GammaWear.Models.ConsumerGroup>()"></select>
                <span asp-validation-for="ConsumerGroup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeasonId" class="control-label">Season</label>
                <select asp-for="SeasonId" class="form-control" asp-items="@(ViewBag.Seasons)">
                    <option value="">Please select a season</option>
                </select>
                <span asp-validation-for="SeasonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrandId" class="control-label">Brand</label>
                <select asp-for="BrandId" class="form-control" asp-items="@(ViewBag.Brands)">
                    <option value="">Please select a brand</option>
                </select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">In Stock</label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label">Image File</label>
                <input asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        <br/>
        <div>
            <a asp-controller="Sock" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary">Back to Detail</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
            <br />

        </div>
    </div>
</div>



@section Scripts {
    <script>
        document.getElementById('MaterialId').addEventListener('change', function () {
            var selectedMaterialText = this.options[this.selectedIndex].text;
            document.getElementById('Material').value = selectedMaterialText;
        });

        // Initialize hidden field on page load
        var initialMaterialText = document.getElementById('MaterialId').options[document.getElementById('MaterialId').selectedIndex].text;
        document.getElementById('Material').value = initialMaterialText;
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
