@page
@model GammaWear.Areas.Identity.Pages.Admin.UserListModel
@{
    ViewData["Title"] = "User List";
}

<h1>User List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>
                <a asp-page="/Admin/ChangeRole" asp-route-id="@user.Id" class="btn btn-custom">Change Role</a>
                    <a asp-page="/Admin/ChangePassword" asp-route-id="@user.Id" class="btn btn-custom">Change Password</a>
            </td>
        </tr>
    }
    </tbody>
</table>
