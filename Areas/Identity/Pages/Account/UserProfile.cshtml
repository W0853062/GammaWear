@page
@model GammaWear.Areas.Identity.Pages.Account.UserProfileModel
@{
    ViewData["Title"] = "User Profile";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Input.Username"></label>
        <input asp-for="Input.Username" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Input.PhoneNumber"></label>
        <input asp-for="Input.PhoneNumber" class="form-control" />
    </div>
    <br/>

    <button type="submit" class="btn btn-custom">Update Profile</button>
</form>
<br/>
<div>
    <div>
        <a asp-page="/Account/ChangePassword" class="link-custom">Change Password</a>
    </div>
    <br />
    @if (User.IsInRole("Admin"))
    {
    <div>
            <a asp-page="/Admin/UserList" class="link-custom">Check User List</a>
    </div>
        <br />
    }
</div>

